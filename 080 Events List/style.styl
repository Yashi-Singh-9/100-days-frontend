*
    margin 0
    padding 0
    box-sizing border-box

body
    font-family 'IBM Plex Sans', sans-serif !important
    background linear-gradient(to bottom right, #EBECF5, #F865B3, #F87E65)
    min-height 88vh
    color #150B30 !important

main
    margin-top 7rem
    max-width 535px
    width 95%
    box-shadow 0 10px 20px darken(#EBECF5, 10%)

    h4
        font-family 'Merriweather', serif

    .cards
        .cards-info
            max-width 350px
            width 100%
            cursor pointer

        .title
            font-size 1.125rem

        p
            font-size 0.875rem

    hr
        border 1.5px solid darken(#D8D8D8, 30%)
        border-radius 5px

    button
        background-color #F8656E
        font-size 1.125rem
