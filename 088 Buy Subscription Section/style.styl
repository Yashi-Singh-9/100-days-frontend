@import url('https://fonts.googleapis.com/css2?family=Merriweather:wght@900&family=Poppins:wght@500;600;700&display=swap')

*
  margin 0
  padding 0
  box-sizing border-box

body 
    font-family 'Poppins', sans-serif !important
    font-weight 500 !important
    background-color #F4F5FA !important  
    color #171435 !important

main 
    margin-top 7rem    

    h2 
        max-width 579px
        width 100%
        font-family 'Merriweather', serif
        font-weight 900

    p 
        font-weight 500
        font-size 1.125rem 
        max-width 713px
        width 100%

    .cards
        .cards
            max-width 285px
            width 100%
            
            &.one
                box-shadow -20px -20px #FFFBEC
                
                img 
                    width 43.11px
                    height 30px

            &.two
                box-shadow -20px -20px #F9ECFF
                
                img 
                    width 76px
                    height 30px        

            &.three
                box-shadow -20px -20px #ECEEFF
                
                img 
                    width 76px
                    height 30px

            .gb 
                font-size 1.125rem
                font-weight 600
               
            .bit
                font-size 0.875rem 
                
            p    
                font-size 1.5rem
                
                span
                    font-size 0.875rem 
                    font-weight 500

            button 
                font-weight 500
                background-color #F4F5FA

    button 
       background-color #1F1F38             